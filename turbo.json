{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ],
      "env": [
        "NEXT_PUBLIC_COUNTER_ADDRESS",
        "NEXT_PUBLIC_PAYMASTER_ADDRESS",
        "NEXT_PUBLIC_BUNDLER_URL",
        "NEXT_PUBLIC_SUBGRAPH_URL",
        "SUBGRAPH_URL",
        "POOLS_CACHE_TTL"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NEXT_PUBLIC_COUNTER_ADDRESS",
        "NEXT_PUBLIC_PAYMASTER_ADDRESS",
        "NEXT_PUBLIC_BUNDLER_URL",
        "NEXT_PUBLIC_SUBGRAPH_URL",
        "SUBGRAPH_URL",
        "POOLS_CACHE_TTL"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".eslintrc*",
        "eslint.config.*"
      ],
      "outputs": [],
      "cache": true
    },
    "lint:fix": {
      "dependsOn": [
        "^lint:fix"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".eslintrc*",
        "eslint.config.*"
      ],
      "outputs": [],
      "cache": false
    },
    "typecheck": {
      "dependsOn": [
        "^typecheck"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "tsconfig*.json"
      ],
      "outputs": [],
      "cache": true
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "tsconfig*.json"
      ],
      "outputs": [],
      "cache": true
    }
  },
  "globalDependencies": [
    ".prettierrc*",
    "prettier.config.*"
  ]
}