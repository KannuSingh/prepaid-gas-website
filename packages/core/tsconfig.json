{
  "compilerOptions": {
    "module": "es2022", // or "esnext"
    "moduleResolution": "bundler",
    "target": "es2022",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}
